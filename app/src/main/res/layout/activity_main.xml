<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_rank_worst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="75dp"
            android:text="이번달\n가장        을\n많이 받은 소비"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/angry_icon"
           android:layout_width="33dp"
           android:layout_height="33dp"
           android:layout_marginStart="100dp"
           android:layout_marginTop="112dp"
           android:src="@drawable/angry_icon"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

      <include
          layout="@layout/account_rank_worst"
          android:id="@+id/account_rank_xml"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="35dp"
          android:layout_marginTop="180dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

      <TextView
          android:id="@+id/text_rank_best"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="45dp"
          android:layout_marginTop="330dp"
          android:text="이번달\n가장        을\n많이 받은 절약"
          android:textColor="#000000"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/smile_icon"
         android:layout_width="33dp"
         android:layout_height="33dp"
         android:layout_marginStart="100dp"
         android:layout_marginTop="365dp"
         android:src="@drawable/smile_icon"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

      <include
         layout="@layout/account_rank_best"
         android:id="@+id/account_rank_xml"
         android:layout_width="350dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="35dp"
         android:layout_marginTop="435dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="72dp"
         android:layout_marginTop="660dp"
         android:background="@color/main_green"
         android:orientation="horizontal"
         app:layout_constraintTop_toTopOf="parent">

          <ImageButton
              android:id="@+id/book_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginHorizontal="70dp"
              android:background="@android:color/transparent"
              android:src="@drawable/ic_book"
              tools:ignore="SpeakableTextPresentCheck"/>

          <ImageButton
               android:id="@+id/user_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginHorizontal="20dp"
               android:background="@android:color/transparent"
               android:src="@drawable/ic_user"
               tools:ignore="SpeakableTextPresentCheck"/>

          <ImageButton
               android:id="@+id/chat_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginHorizontal="70dp"
               android:background="@android:color/transparent"
               android:src="@drawable/ic_chat"
               tools:ignore="SpeakableTextPresentCheck"/>
      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/in_view_drawer"
        layout="@layout/view_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>